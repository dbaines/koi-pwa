<% 
  resource = User.new
  resource_name = :user
  edit_mode ||= false 
%>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { data: { user_form: "", devise_registration_form: "" } }) do |f| %>
  <%= f.error_notification %>

  <div class="inputs">
    <%= f.input :email, required: true, input_html: { autocomplete: "username email" } %>

    <% if edit_mode && devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>
    
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation, required: true %>
    
    <div>
      <%= f.button :button, "Sign up", class: "button" %>
    </div>
  </div>
<% end %>